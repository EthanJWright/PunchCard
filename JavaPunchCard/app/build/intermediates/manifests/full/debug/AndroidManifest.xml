<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ethanwright.javapunchcard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Time Card"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ethanwright.javapunchcard.MainActivity"
            android:label="Time Card"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ethanwright.javapunchcard.CreateCard"
            android:label="@string/title_activity_create_card"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.ethanwright.javapunchcard.ResetByCategory"
            android:label="ResetByCategory"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.ethanwright.javapunchcard.ViewAllCards"
            android:label="@string/title_activity_view_all_cards"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.ethanwright.javapunchcard.ViewCategories"
            android:label="ViewCategories"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.ethanwright.javapunchcard.Report"
            android:label="Report"
            android:theme="@style/AppTheme.NoActionBar" >
            <activity
                android:name="com.example.ethanwright.javapunchcard.ViewPunchHistory"
                android:label="ViewPunchHistory"
                android:screenOrientation="locked"
                android:theme="@style/AppTheme" />
        </activity>
        <activity
            android:name="com.example.ethanwright.javapunchcard.ViewPunchHistory"
            android:label="@string/title_activity_view_punch_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.ethanwright.javapunchcard.EditCardLog"
            android:label="@string/title_activity_edit_card_log"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>